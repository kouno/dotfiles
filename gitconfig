  name = Vincent Bonmalais
  email = vb.kouno@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green
  changed = red
  untracked = red
[core]
  editor = vim
  quotepath = false
  excludesfile = /Users/Kouno/.gitignore
[alias]
  w = wtf
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  logg = log --graph --decorate
  graph = log --graph --decorate --pretty=oneline --abbrev-commit
;  wtf = !git-wtf
[merge]
  tool = vimdiff
  prompt = false
[difftool]
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[diff]
  tool = Kaleidoscope
  renames = copies
[push]
	default = matching
